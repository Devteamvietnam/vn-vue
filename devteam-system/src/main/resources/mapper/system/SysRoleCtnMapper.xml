<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devteam.system.mapper.SysRoleCtnMapper">

	<resultMap type="SysRoleCtn" id="SysRoleCtnResult">
		<result property="roleId"     column="role_id"      />
		<result property="ctnId"     column="ctn_id"      />
	</resultMap>

	<delete id="deleteRoleCtnByRoleId" parameterType="Long">
		delete from sys_role_ctn where role_id=#{roleId}
	</delete>
	
	<select id="selectCountRoleDeptByCtnId" resultType="Integer">
	    select count(1) from sys_role_ctn where ctn_id=#{ctnId}
	</select>
	
	<delete id="deleteRoleCtn" parameterType="Long">
 		delete from sys_role_ctn where role_id in
 		<foreach collection="array" item="roleId" open="(" separator="," close=")">
 			#{roleId}
        </foreach> 
 	</delete>
	
	<insert id="batchRoleCtn">
		insert into sys_role_ctn(role_id, ctn_id) values
		<foreach item="item" index="index" collection="list" separator=",">
			(#{item.roleId},#{item.ctnId})
		</foreach>
	</insert>
	
</mapper> 